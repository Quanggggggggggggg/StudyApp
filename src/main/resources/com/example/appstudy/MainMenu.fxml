<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.appstudy.Controller.MainMenuController">

    <!-- HEADER -->
    <top>
        <HBox spacing="20" style="-fx-background-color: #f0f0f0;" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <children>
                <Label text="📘 IELTS Master" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                <Pane HBox.hgrow="ALWAYS"/>
                <Label fx:id="avatarLabel" text="🙂 UserName"/>
                <Button fx:id="settingsBtn" text="⚙"/>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </HBox>
    </top>

    <!-- MAIN CONTENT -->
    <center>
        <GridPane hgap="20" vgap="20" alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <children>
                <Button fx:id="btnLearningPath" text="📘 Learning Path" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="180" prefHeight="80"/>
                <Button fx:id="btnVocabulary" text="📚 Vocabulary" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="180" prefHeight="80"/>
                <Button fx:id="btnPractice" text="📝 Practice Test" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="180" prefHeight="80"/>
                <Button fx:id="btnDictionary" text="🔍 Dictionary" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="180" prefHeight="80"/>
                <Button fx:id="btnLeaderboard" text="🏆 Leaderboard" GridPane.rowIndex="2" GridPane.columnIndex="0" prefWidth="180" prefHeight="80"/>
                <Button fx:id="btnProfile" text="👤 Profile" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="180" prefHeight="80"/>
            </children>
        </GridPane>
    </center>

    <!-- FOOTER -->
    <bottom>
        <HBox spacing="40" alignment="CENTER" style="-fx-background-color: #f0f0f0; -fx-font-size: 14px;">
            <children>
                <Label fx:id="xpLabel" text="XP: 1200"/>
                <Label fx:id="streakLabel" text="🔥 Streak: 5"/>
                <Label fx:id="levelLabel" text="Level: Intermediate"/>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </HBox>
    </bottom>

</BorderPane>
